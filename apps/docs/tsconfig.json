{
  "extends": "@pallas-ui/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "content-collections": ["./.content-collections/generated"],
      "@/components/*": ["./components/*"],
      "@styled-system/*": ["./styled-system/*"],
      "@/public/*": ["./public/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.mjs",
    ".next/types/**/*.ts",
    "plugins/rehype-component.js"
  ],
  "exclude": ["node_modules"]
}
